@model PC1.Models.InversionModel
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmación</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/images/red.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #fefefe;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .summary {
            font-weight: bold;
        }
        button {
            width: 100%;
            padding: 10px;
            background-color: #d9534f;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

    </style>
</head>

<body>
    <div class="container">
        <h2>Confirmación de Inversión::</h2>
        <table>
            <thead>
                <tr>
                    <th>Instrumento: S&P 500</th>
                    <th>Precio: $500</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.SeleccionSP500)
                {
                    <tr>
                        <td>S&P 500</td>
                        <td>$500</td>
                    </tr>
                }
                @if (Model.SeleccionDowJones)
                {
                    <tr>
                        <td>DOW JONES</td>
                        <td>$300</td>
                    </tr>
                }
                @if (Model.SeleccionBonosUS)
                {
                    <tr>
                        <td>BONOS US</td>
                        <td>$120</td>
                    </tr>
                }
            </tbody>
        </table>

        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Correo:</strong> @Model.Correo</p>

        <p><strong>Fecha de Operación:</strong> @Model.FechaOperacion.ToString("dd/MM/yyyy")</p>
        <p><strong>Total:</strong> $@Model.Total</p>
        <p><strong>IGV (18%):</strong> $@Model.IGV</p>
        <p><strong>Comisión:</strong> $@Model.Comision</p>
        <p class="summary"><strong>Total a Pagar:</strong> $@Model.MontoAPagar</p>

        <button onclick="window.location.href='@Url.Action("InversionInicio", "Home")'">Pagar</button>
    </div>
    
</body>
</html>